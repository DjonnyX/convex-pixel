{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "importHelpers": false,
    "baseUrl": "../src",
    "paths": {
      "@cpx/*": ["./*", "cpx/*"]
    }
  },
  "include": ["../src**/*"]
}
